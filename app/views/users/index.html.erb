<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div id="search">
  <div class="search_field">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>
  <div class="search_field">
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
  <div class="search_field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
   <div class="search_field">
    <%= label_tag :state %>
    <%= select_tag(:state_id, options_for_select(@states), prompt: 'Select' )%>
  </div>
  <div class="search_field_btn">
    <%= button_tag :search, id: 'search_btn'%>
  </div>
</div>

<br class="clear">

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="users_list">
    <%= render 'list', users: @users %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %> | 
<%= link_to 'New State', new_state_path %> | 
